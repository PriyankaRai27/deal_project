<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="#FFFFFF"
   >

  <TextView
      android:id="@+id/dealAisle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:text="b1"
      android:gravity="center"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:background="@drawable/circle"
      android:textColor="@color/red_color"
      app:layout_constraintBottom_toBottomOf="@id/dealImage"
      app:layout_constraintTop_toTopOf="@+id/dealShip"
      app:layout_constraintStart_toEndOf="@+id/dealShip" />

  <ImageView
      android:id="@+id/dealImage"
      android:layout_width="150dp"
      android:layout_height="96dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="10dp"
      android:scaleType="centerCrop"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@mipmap/ic_launcher"
      android:layout_marginBottom="10dp"/>

  <TextView
      android:id="@+id/dealTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="10dp"
      android:maxLines="2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/dealImage"
      app:layout_constraintTop_toTopOf="parent"
      />

  <View
      android:layout_width="wrap_content"
      android:layout_height="1dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp"
      android:background="@android:color/darker_gray"
      app:layout_constraintStart_toEndOf="@+id/dealImage"
      app:layout_constraintTop_toBottomOf="@+id/dealTitle" />

  <TextView
      android:id="@+id/dealPrice"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:text="TextView"
      app:layout_constraintBottom_toBottomOf="@id/dealImage"
      app:layout_constraintStart_toStartOf="@+id/dealTitle" />

  <TextView
      android:id="@+id/dealShip"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="76dp"
      android:maxLines="5"
      android:text="Ship  or"
      app:layout_constraintBottom_toBottomOf="@id/dealImage"
      app:layout_constraintStart_toEndOf="@+id/dealPrice"
      app:layout_constraintTop_toTopOf="@+id/dealPrice"
      app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>

